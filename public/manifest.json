{
  "short_name": "CSS Selector Generator for Chrome Devtools Elements Sidebar",
  "name": "CSS Selector Generator for Chrome Devtools Elements Sidebar",
  "version": "0.1",
  "description": "Generate CSS Selectors from the Chrome Devtools Elements Panel",
  "permissions": ["activeTab", "http://*/*", "https://*/*"],
  "manifest_version": 2,
  "devtools_page": "devtools.html",
  "background": {
    "scripts": ["/static/js/background/background.js"],
    "persistent": false
  },
  "icons": {
    "16": "/images/abba16.png",
    "48": "/images/abba48.png",
    "128": "/images/abba128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/static/js/content_script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
